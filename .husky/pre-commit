#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate templates before commit
echo "🔍 Validating templates for Yarn 1.22 compatibility..."
yarn validate:templates

# If validation fails, the commit will be aborted
if [ $? -ne 0 ]; then
  echo "❌ Template validation failed. Please fix the issues before committing."
  exit 1
fi

echo "✅ Template validation passed"