{
  "name": "{{kebabCase projectName}}-glsp",
  "displayName": "{{projectName}} GLSP Extension",
  "description": "GLSP-based visual modeling tool for {{projectName}}",
  "version": "0.0.1",
  "publisher": "{{#if config.extension.publisher}}{{config.extension.publisher}}{{else}}example-publisher{{/if}}",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Programming Languages", "Other"],
  "keywords": ["glsp", "{{toLowerCase projectName}}", "modeling", "diagram"],
  "activationEvents": [
    "onLanguage:{{toLowerCase projectName}}",
    "onCommand:{{toLowerCase projectName}}.diagram.open"
  ],
  "main": "./lib/extension.js",
  "contributes": {
    "languages": [{
      "id": "{{toLowerCase projectName}}",
      "aliases": ["{{projectName}}", "{{toLowerCase projectName}}"],
      "extensions": [".{{#if config.extension.fileExtension}}{{config.extension.fileExtension}}{{else}}{{toLowerCase projectName}}{{/if}}"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "{{toLowerCase projectName}}",
      "scopeName": "source.{{toLowerCase projectName}}",
      "path": "./syntaxes/{{toLowerCase projectName}}.tmLanguage.json"
    }],
    "commands": [{
      "command": "{{toLowerCase projectName}}.diagram.open",
      "title": "Open {{projectName}} Diagram",
      "category": "{{projectName}}"
    }],
    "menus": {
      "editor/title": [{
        "when": "resourceExtname == .{{#if config.extension.fileExtension}}{{config.extension.fileExtension}}{{else}}{{toLowerCase projectName}}{{/if}}",
        "command": "{{toLowerCase projectName}}.diagram.open",
        "group": "navigation"
      }],
      "explorer/context": [{
        "when": "resourceExtname == .{{#if config.extension.fileExtension}}{{config.extension.fileExtension}}{{else}}{{toLowerCase projectName}}{{/if}}",
        "command": "{{toLowerCase projectName}}.diagram.open",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "tsc",
    "watch": "tsc -watch"
  },
  "dependencies": {
    "@eclipse-glsp/vscode-integration": "^2.0.0",
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0"
  }
}