{
  "name": "glsp-generator",
  "version": "2.0.0",
  "description": "Generate Theia GLSP extensions from Langium grammars",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "yarn@4.9.1",
  "bin": {
    "glsp": "./dist/cli.js",
    "glsp-gen": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && yarn copy-templates",
    "copy-templates": "node -e \"require('fs-extra').copySync('src/templates', 'dist/templates')\"",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "node dist/cli.js",
    "validate:templates": "node scripts/validate-templates.js",
    "validate:generated": "node scripts/validate-generated.js",
    "validate": "yarn validate:templates",
    "prepare": "husky install",
    "setup:dev": "node scripts/setup-dev-cli.js",
    "link:global": "yarn build && yarn link",
    "test:examples": "node scripts/test-all-examples.mjs"
  },
  "keywords": [
    "glsp",
    "langium",
    "theia",
    "code-generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "langium": "^3.5.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "vscode-uri": "^3.1.0",
    "ws": "^8.16.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.32",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
