{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "es2022",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "types": [
            "jest",
            "node"
        ],
        "allowImportingTsExtensions": false,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}