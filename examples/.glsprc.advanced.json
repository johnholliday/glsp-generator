{
  "$schema": "../src/config/glsprc.schema.json",
  "extension": {
    "name": "workflow-glsp",
    "displayName": "Workflow Designer GLSP Extension",
    "version": "2.5.0",
    "publisher": "enterprise-corp",
    "description": "Enterprise-grade workflow modeling tool with advanced features",
    "license": "Apache-2.0",
    "repository": "https://github.com/enterprise/workflow-glsp",
    "author": "Enterprise Team",
    "keywords": ["glsp", "workflow", "bpmn", "modeling", "enterprise"]
  },
  "dependencies": {
    "@eclipse-glsp/server": "^2.1.0",
    "@eclipse-glsp/client": "^2.1.0",
    "@eclipse-glsp/theia-integration": "^2.1.0",
    "@theia/core": "^1.40.0",
    "customDeps": {
      "rxjs": "^7.8.0",
      "date-fns": "^2.30.0",
      "axios": "^1.6.0",
      "@enterprise/workflow-lib": "^3.0.0"
    }
  },
  "diagram": {
    "type": "hierarchical",
    "features": {
      "compartments": true,
      "ports": true,
      "routing": "bezier",
      "grid": true,
      "snapToGrid": true,
      "autoLayout": true,
      "animation": true
    }
  },
  "styling": {
    "theme": "dark",
    "defaultColors": {
      "node": "#1E88E5",
      "edge": "#90A4AE",
      "selected": "#FFC107",
      "hover": "#FF5722",
      "error": "#F44336"
    },
    "fonts": {
      "default": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
      "monospace": "JetBrains Mono, Consolas, monospace"
    },
    "nodeDefaults": {
      "width": 150,
      "height": 80,
      "cornerRadius": 12
    }
  },
  "generation": {
    "outputStructure": "custom",
    "includeExamples": true,
    "generateTests": true,
    "generateDocs": true,
    "templateOverrides": {
      "model": "./custom-templates/workflow-model.hbs",
      "server-model": "./custom-templates/workflow-server-model.hbs"
    }
  }
}