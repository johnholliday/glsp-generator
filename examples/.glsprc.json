{
  "$schema": "../src/config/glsprc.schema.json",
  "extension": {
    "name": "state-machine-glsp",
    "displayName": "State Machine GLSP Extension",
    "version": "1.0.0",
    "publisher": "example-company",
    "description": "A GLSP-based state machine modeling tool",
    "license": "MIT",
    "repository": "https://github.com/example/state-machine-glsp",
    "author": "Example Team <team@example.com>",
    "keywords": ["glsp", "state-machine", "modeling", "theia", "eclipse"]
  },
  "dependencies": {
    "@eclipse-glsp/server": "^2.0.0",
    "@eclipse-glsp/client": "^2.0.0",
    "@eclipse-glsp/theia-integration": "^2.0.0",
    "@theia/core": "^1.35.0",
    "customDeps": {
      "uuid": "^9.0.0",
      "lodash": "^4.17.21"
    }
  },
  "diagram": {
    "type": "node-edge",
    "features": {
      "compartments": false,
      "ports": true,
      "routing": "manhattan",
      "grid": true,
      "snapToGrid": true,
      "autoLayout": false,
      "animation": true
    }
  },
  "styling": {
    "theme": "light",
    "defaultColors": {
      "node": "#4A90E2",
      "edge": "#333333",
      "selected": "#FF6B6B",
      "hover": "#FFA500",
      "error": "#DC143C"
    },
    "fonts": {
      "default": "Arial, sans-serif",
      "monospace": "Consolas, Monaco, monospace"
    },
    "nodeDefaults": {
      "width": 120,
      "height": 60,
      "cornerRadius": 8
    }
  },
  "generation": {
    "outputStructure": "standard",
    "includeExamples": true,
    "generateTests": true,
    "generateDocs": true,
    "templateOverrides": {}
  }
}