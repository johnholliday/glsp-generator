{
  "name": "statemachine-glsp-extension",
  "version": "0.1.0",
  "displayName": "Statemachine GLSP Extension",
  "description": "GLSP extension for Statemachine",
  "publisher": "glsp-generator",
  "packageManager": "yarn@1.22.22",
  "main": "lib/extension/index.js",
  "private": true,
  "workspaces": false,
"author": "Generated by glsp-generator",
  "license": "MIT",
  "icon": "logo.png",
  "engines": {
  "vscode": "^1.74.0"
},
  "categories": [
  "Programming Languages",
  "Visualization"
],
  "activationEvents": [
    "onCommand:statemachine.diagram.open",
    "onLanguage:statemachine",
    "onCustomEditor:statemachine.diagram",
    "workspaceContains:**/*.sm"
  ],
  "contributes": {
    "languages": [
      {
        "id": "statemachine",
        "aliases": ["Statemachine", "statemachine"],
        "extensions": [".sm"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "statemachine",
        "scopeName": "source.statemachine",
        "path": "./syntaxes/statemachine.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "statemachine.diagram.open",
        "title": "Statemachine: Open as Diagram",
        "category": "Statemachine",
        "icon": "$(symbol-structure)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .sm",
          "command": "statemachine.diagram.open",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .sm",
          "command": "statemachine.diagram.open",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .sm",
          "command": "statemachine.diagram.open",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "statemachine.diagram",
        "displayName": "Statemachine Diagram",
        "selector": [
          {
            "filenamePattern": "*.sm"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "build": "yarn build:extension && yarn build:webview",
    "build:extension": "tsc",
    "build:webview": "webpack --config webpack.config.js",
    "watch": "concurrently \"yarn watch:extension\" \"yarn watch:webview\"",
    "watch:extension": "tsc --watch",
    "watch:webview": "webpack --config webpack.config.js --watch",
    "clean": "rimraf lib dist",
    "prepare": "yarn clean && yarn build",
    "vscode:prepublish": "yarn build",
    "test": "vitest"
  },
  "dependencies": {
    "@eclipse-glsp/client": "^2.0.0",
    "@eclipse-glsp/server": "^2.0.0",
    "@eclipse-glsp/theia-integration": "^2.0.0",
    "@theia/core": "^1.35.0",
    "inversify": "^6.0.0",
    "reflect-metadata": "^0.2.0",
    "sprotty": "^1.0.0",
    "sprotty-protocol": "^1.0.0",
    "@theia/filesystem": "^1.35.0",
    "@theia/messages": "^1.35.0",
    "@theia/monaco": "^1.35.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "ts-loader": "^9.0.0",
    "css-loader": "^6.0.0",
    "style-loader": "^3.0.0",
    "concurrently": "^7.0.0",
    "process": "^0.11.10",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  },
  "keywords": [
  "glsp",
  "diagram",
  "modeling",
  "statemachine"
]
}
